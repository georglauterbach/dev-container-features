// ref: https://github.com/devcontainers/spec/blob/main/schemas/devContainerFeature.schema.json
{
  "id": "common",
  "version": "0.1.0",
  "name": "Development Container Feature - Common Setup",
  "documentationURL": "https://github.com/georglauterbach/dev-container-features/tree/main/src/common",
  "description": "Common setup for system packages, user configuration or user programs",
  "options": {
    "system.packages.update": {
      "description": "Whether package signatures should be updated",
      "type": "boolean",
      "default": true
    },
    "system.packages.upgrade": {
      "description": "Whether existing packages should be upgraded",
      "type": "boolean",
      "default": true
    },
    "system.packages.additional-packages": {
      "description": "A comma-separated list of additional packages to install",
      "type": "string",
      "proposals": [
        "apt-utils,ca-certificates,curl,dialog,doas,file,locales,tzdata"
      ],
      "default": ""
    },
    "system.packages.clean": {
      "description": "Whether to run cleanup steps (like `apt-get clean`)",
      "type": "boolean",
      "default": true
    },
    "system.setup.doas": {
      "description": "Whether to set up [`doas`](https://wiki.archlinux.org/title/Doas). Make sure it is installed.",
      "type": "boolean",
      "default": false
    },
    "system.time.zone": {
      "description": "The time zone to use (for configuration packages like `tzdata` non-interactively)",
      "type": "string",
      "default": ""
    },
    "user.config.prompt": {
      "description": "Whether to provide a prompt setup. Setting this to `true` does not enable anything yet, it simply places the configuration files.",
      "type": "boolean",
      "default": true
    },
    "user.packages.install": {
      "description": "Install additional packages to `${HOME}/.local/bin/`",
      "type": "boolean",
      "default": true
    },
    "proxy.http.http.address": {
      "description": "A URI for an HTTP proxy",
      "type": "string",
      "default": ""
    },
    "proxy.http.https.address": {
      "description": "A URI for an HTTPS proxy",
      "type": "string",
      "default": ""
    },
    "proxy.http.no-proxy.address": {
      "description": "A list of URIs to not proxy",
      "type": "string",
      "default": "localhost,127.0.0.1"
    }
  }
}
