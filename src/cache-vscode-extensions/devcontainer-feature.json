// ref: https://github.com/devcontainers/spec/blob/main/schemas/devContainerFeature.schema.json
{
  "id": "cache-vscode-extensions",
  "version": "0.3.0",
  "name": "Development Container Feature - Cache VS Code Extensions",
  "documentationURL": "https://github.com/georglauterbach/dev-container-features/tree/main/src/cache-vscode-extensions",
  "description": "A Development Container Feature that prevents superfluous (re-)installations of VS extensions upon container restarts by caching the extensions",
  "mounts": [
    "type=volume,source=devcontainer-cache-vscode-extensions-${devcontainerId},target=/opt/vscode-extensions-cache,file_mode=0777,dir_mode=0777"
  ]
}
